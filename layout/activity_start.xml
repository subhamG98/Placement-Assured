<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="subhamguptaminor.androidbelieve.drawerwithswipetabs.start">


    <android.support.v4.view.ViewPager

        android:id="@+id/reviewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/login1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mybutton"
        android:text="SIGN IN"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/reviewpager"
        android:layout_alignEnd="@+id/reviewpager"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/register1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/mubutton1"
        android:text="Join Now"
        android:layout_alignTop="@+id/login1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="31dp" />
</RelativeLayout>
